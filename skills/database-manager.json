{
  "name": "database-manager",
  "description": "Universal database management tool supporting multiple database types with migration and backup features",
  "category": "database",
  "tags": ["database", "sql", "migration", "backup", "management"],
  "version": "1.5.0",
  "author": "Claude Code",
  "configuration": {
    "required_env": [
      "DATABASE_URL"
    ],
    "optional_env": [
      "DB_BACKUP_DIR",
      "DB_MIGRATION_DIR"
    ],
    "parameters": {
      "db_type": {
        "type": "string",
        "description": "Database type (postgresql, mysql, sqlite, mongodb)",
        "default": "postgresql"
      },
      "connection_pool_size": {
        "type": "number",
        "description": "Connection pool size",
        "default": 10
      },
      "query_timeout": {
        "type": "number",
        "description": "Query timeout in seconds",
        "default": 30
      }
    }
  },
  "capabilities": [
    "Execute SQL queries across multiple database types",
    "Database schema migration management",
    "Automated backup and restore",
    "Data import/export (CSV, JSON, SQL)",
    "Database health monitoring",
    "Query optimization suggestions",
    "Generate database documentation",
    "Transaction management with rollback support"
  ],
  "usage_examples": [
    {
      "description": "Run a SQL query",
      "command": "query \"SELECT * FROM users WHERE active = true\""
    },
    {
      "description": "Create a migration",
      "command": "migration create add_user_table"
    },
    {
      "description": "Backup database",
      "command": "backup --output backup_20241215.sql"
    }
  ],
  "installation": {
    "npm": "npm install -g db-manager-cli",
    "pip": "pip install db-manager-cli"
  },
  "documentation_url": "https://github.com/your-repo/database-manager"
}