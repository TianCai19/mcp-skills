{
  "name": "hello-world",
  "description": "A simple skill that outputs a hello world message",
  "category": "examples",
  "tags": ["example", "basic", "hello-world"],
  "version": "1.0.0",
  "author": "Claude Code",
  "configuration": {
    "required_env": [],
    "optional_env": [],
    "parameters": {
      "name": {
        "type": "string",
        "description": "Name to greet",
        "default": "World"
      }
    }
  },
  "capabilities": [
    "Output a personalized hello message",
    "Support custom names via parameters"
  ],
  "usage_examples": [
    {
      "description": "Say hello to the world",
      "command": "hello"
    },
    {
      "description": "Say hello to a specific person",
      "command": "hello --name Alice"
    }
  ],
  "installation": {
    "npm": "npm install -g hello-world-skill"
  },
  "documentation_url": "https://github.com/your-repo/hello-world-skill"
}